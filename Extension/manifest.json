{
  "manifest_version": 3,
  "name": "SubtitleAI Pro - YouTube Transcriber",
  "version": "1.0",
  "description": "ðŸŽ¬ AI-powered subtitle generator for YouTube videos. Transcribe any language to English instantly!",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://*.youtu.be/*",
    "http://localhost:5000/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/watch*",
        "https://*.youtu.be/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Generate Subtitles",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
